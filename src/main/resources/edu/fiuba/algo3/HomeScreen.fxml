<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.algo3.HomeScreenController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/homeScreen.png" />
         </image>
      </ImageView>
      <Label id="homeTitle" alignment="CENTER" lineSpacing="10.0" stylesheets="@css/textFormat.css" text="BIENVENIDOS&#10;A&#10;ALGO-ROMA" textAlignment="CENTER" textFill="#c80b0b" wrapText="true" StackPane.alignment="TOP_CENTER">
         <font>
            <Font name="Press Start 2P" size="33.0" />
         </font>
         <StackPane.margin>
            <Insets top="130.0" />
         </StackPane.margin>
      </Label>
      <Button id="button" mnemonicParsing="false" onAction="#switchToUserInfo" prefHeight="40.0" prefWidth="180.0" stylesheets="@css/textFormat.css" text="Continuar" StackPane.alignment="BOTTOM_CENTER">
         <StackPane.margin>
            <Insets bottom="70.0" />
         </StackPane.margin>
      </Button>
      <MenuBar blendMode="SRC_ATOP" useSystemMenuBar="true" StackPane.alignment="TOP_CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Close">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</StackPane>
