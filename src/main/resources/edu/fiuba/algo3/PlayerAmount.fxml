<StackPane style="-fx-background-color: rgb(204, 248, 237);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.algo3.PlayerAmountController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/UserInformationScreen.png" />
         </image>
      </ImageView>
      <Button id="button" fx:id="continueButton" mnemonicParsing="false" onAction="#switchPlayerNames" prefHeight="40.0" prefWidth="150.0" stylesheets="@css/textFormat.css" text="Continuar" StackPane.alignment="BOTTOM_CENTER">
         <StackPane.margin>
            <Insets bottom="70.0" />
         </StackPane.margin>
      </Button>
      <HBox id="textBackground" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="90.0" prefWidth="200.0" stylesheets="@css/textFormat.css">
         <StackPane.margin>
            <Insets bottom="450.0" top="110.0" />
         </StackPane.margin>
         <children>
            <Label id="text" alignment="CENTER" prefHeight="62.0" prefWidth="462.0" stylesheets="@css/textFormat.css" text="Ingrese el número de&#10; jugadores (entre 2 y 6):" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
            <TextField id="textField" fx:id="numberOfPlayers" alignment="CENTER" maxWidth="68.0" onKeyTyped="#validateNumber" prefHeight="50.0" prefWidth="68.0" promptText="6" stylesheets="@css/textFormat.css">
               <font>
                  <Font name="Press Start 2P" size="22.0" />
               </font>
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
         </children>
      </HBox>
      <MenuBar prefHeight="1.0" prefWidth="606.0" StackPane.alignment="TOP_CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Juego">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#returnToMenu" text="Volver al menu" />
                  <MenuItem mnemonicParsing="false" onAction="#fullScreen" text="Pantalla completa" />
                  <MenuItem mnemonicParsing="false" onAction="#closeGame" text="Cerrar" />
               </items>
            </Menu>
            <Menu fx:id="soundMenu" mnemonicParsing="false" text="Sonido">
               <items>
                  <MenuItem mnemonicParsing="false" text="Volumen">
                     <graphic>
                        <Slider fx:id="volumeSlider" nodeOrientation="LEFT_TO_RIGHT" value="10.0" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="playPause" mnemonicParsing="false" onAction="#pauseMusic" text="Pausar música" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Ayuda">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#help" text="Instrucciones" />
                  <MenuItem mnemonicParsing="false" onAction="#about" text="Acerca de" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label fx:id="validationLabel" StackPane.alignment="BOTTOM_CENTER">
         <StackPane.margin>
            <Insets bottom="150.0" />
         </StackPane.margin>
         <font>
            <Font name="Press Start 2P" size="22.0" />
         </font>
         <textFill>
            <LinearGradient endX="0.5037878643382678" endY="1.0" startX="0.5037878572263501">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" green="0.01903553307056427" />
                     </color>
                  </Stop>
                  <Stop offset="0.29071332436069985">
                     <color>
                        <Color red="1.0" green="0.01903553307056427" />
                     </color>
                  </Stop>
                  <Stop offset="0.4945277878081606">
                     <color>
                        <Color red="1.0" green="0.9666666388511658" blue="1.1102230246251565E-16" />
                     </color>
                  </Stop>
                  <Stop offset="0.7200538358008074">
                     <color>
                        <Color red="1.0" green="0.09000000357627869" blue="0.09000000357627869" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="0.09000000357627869" blue="0.09000000357627869" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
   </children>
</StackPane>
